        <div class="planet-card">
            <div class="planet" style="background: radial-gradient(circle, #e07035 0%, #c45a2b 30%, #a03e1a 60%, #762d14 85%, #541d0d 100%)"></div>
            <h3>Venus</h3>
            <p>0.72 AU Distance</p>
        </div>

        <div class="planet-card">
            <div class="planet" style="background: radial-gradient(circle, #2b75b8 0%, #2074a0 30%, #1b5e53 60%, #8bb174 85%, #e0d8a6 100%);"></div>
            <h3>Earth</h3>
            <p>1.00 AU Distance</p>
        </div>

        <div class="planet-card">
            <div class="planet" style="background: radial-gradient(circle, #f4d47c 0%, #e3c16f 30%, #c98a4c 60%, #a45f35 85%, #6b3d1f 100%) ;"></div>
            <h3>Mars</h3>
            <p>1.52 AU Distance</p>
        </div>

        <div class="planet-card">
            <div class="planet" style="background: radial-gradient(circle, #f2d2a9 0%, #e3ab6f 20%, #c67c4f 40%, #a45f35 60%, #6b3d1f 80%, #3e1f0f 100%);"></div>
